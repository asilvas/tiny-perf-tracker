{
  "name": "tiny-perf-tracker",
  "version": "0.1.0",
  "description": "Tiny browser+node performance tracker",
  "main": "dist/node.js",
  "umd:main": "dist/node.umd.js",
  "module": "dist/node.esm.js",
  "esmodule": "dist/node.modern.js",
  "exports": {
    ".": {
      "browser": "./dist/browser.umd.js",
      "umd": "./dist/browser.umd.js",
      "import": "./dist/browser.esm.js",
      "require": "./dist/browser.js"
    },
    "./logger": {
      "browser": "./dist/logger.modern.js",
      "umd": "./dist/logger.umd.js",
      "import": "./dist/logger.esm.js",
      "require": "./dist/logger.js"
    }
  },
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:browser": "microbundle -i src/browser.js -o dist/browser.js --raw --name tinyPerfTracker",
    "build:logger": "microbundle -i src/logger.js -o dist/logger.js --raw --name tinyPerfLogger",
    "build:node": "microbundle build src/node.js --raw --target node",
    "cover": "serve coverage",
    "examples": "npm run build && echo \"Visit http://localhost:5000/examples\" && serve ./",
    "prettier": "prettier --write src",
    "test": "npm run unit-cov",
    "unit": "mocha --recursive --require '@babel/register' test/shared test/node",
    "unit-cov": "nyc --reporter=html --reporter=text --report=text \"mocha --recursive --require '@babel/register' test/shared test/node\"",
    "watch": "microbundle watch --raw --format cjs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && npm build",
      "pre-push": "npm test && npm build"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asilvas/tiny-perf-tracker.git"
  },
  "keywords": [
    "perf",
    "performance",
    "tracker"
  ],
  "author": "Aaron Silvas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/asilvas/tiny-perf-tracker/issues"
  },
  "files": [
    "src",
    "dist"
  ],
  "homepage": "https://github.com/asilvas/tiny-perf-tracker#readme",
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/register": "^7.12.13",
    "babel-plugin-istanbul": "^6.0.0",
    "chai": "^4.3.0",
    "husky": "^4.3.8",
    "microbundle": "^0.13.0",
    "mocha": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "serve": "^11.3.2",
    "sinon": "^9.2.4",
    "sinon-chai": "^3.5.0"
  }
}
